{
  "roots": ["<rootDir>/tests"],
  "collectCoverageFrom": ["<rootDir>/src/**/*.{ts,tsx}", "!<rootDir>/src/index.tsx"],
  "coverageDirectory": "coverage",
  "testEnvironment": "jsdom", 
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest",
    "^.+\\.(js|jsx)$": "babel-jest",
    "^.+\\.(css|scss)$": "jest-transform-css"
  }
}
